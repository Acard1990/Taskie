<head>
  <style>
    body {
      background-image: none;
    }
  </style>
</head>
<div class="container all-profile-content">
  <div class="row bottom-border">
    <img class="userpic col-xs-1" src="{{user.thumbnail}}">
      <p id="welcomeText" class="welcome-text align-this col-8">Welcome back, {{user.firstName}} {{user.lastName}}</p>
      <div class="col-3 float-right align-this task-form-group">
        <p id="createNewTask" class="new-task-text text-right">+ New Task</p>
        <div id="addTaskForm" class="task-form-div">
          <h4>Add a new task</h4>
          <form action="/profile/api/task" method="post">
            <input type="text" class="form-control task-form" placeholder="Task Description" name="description">
            <textarea class="form-control task-text-area" placeholder="Task Details" name="details"></textarea>
            <button type="submit" class="btn btn-sm pickUp">Submit</button>
          </form>
        </div>
      </div>
  </div>
  <div class="row main-content-area">
    <div class="col-6">
      <h3 class="intro"><strong>Your Tasks</strong></h3>
      <div id="myCurrentTasks" class="user-task-area">
        <p>Current Active Tasks</p>
        <div id="myTasks" class="user-task-area">
        </div>
      </div>
      <div id="myCurrentTasks" class="user-task-area">
        <p>Tasks You've Picked Up</p>
        <div id="pickedUp" class="user-task-area">
        </div>
      </div>
      <div id="myCompletedTasks" class="user-task-area">
        <p>My Completed Tasks</p>
        <div id="completed" class="user-task-area">
        </div>
      </div>
    </div>
    <div class="col-6 need-border">
      <h3 class="intro"><strong>Other's Tasks</strong></h3>
      <div id="othersOpenTasks" class="user-task-area">
        <div id="allTasks" class="user-task-area">
        </div>
      </div>
    </div>
  </div>
</div>

<script>let id = {{user.id}}</script>
<script src="./js/taskie.js"></script>
